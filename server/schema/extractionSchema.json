{
  "type": "object",
  "required": ["document_kind", "policy", "insureds"],
  "properties": {
    "document_kind": {
      "type": "string",
      "enum": [
        "homeowners_declarations",
        "auto_declarations",
        "certificate_of_insurance",
        "other"
      ],
      "description": "Type of document detected"
    },
    "source": {
      "type": "object",
      "properties": {
        "file_name": { "type": "string" },
        "pages": { "type": "integer", "minimum": 1 }
      }
    },
    "policy": {
      "type": "object",
      "required": ["number", "effective_date", "expiration_date"],
      "properties": {
        "number": { "type": "string" },
        "type": { "type": "string" },
        "effective_date": { "type": "string" },
        "expiration_date": { "type": "string" },
        "insurer": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "naic": { "type": "string" }
          }
        },
        "producer": {
          "type": "object",
          "properties": {
            "agency_name": { "type": "string" },
            "contact_name": { "type": "string" },
            "phone": { "type": "string" },
            "email": { "type": "string" }
          }
        },
        "premium_summary": {
          "type": "object",
          "properties": {
            "total_premium": {
              "anyOf": [{ "type": "number" }, { "type": "string" }]
            },
            "fees_and_taxes": {
              "anyOf": [{ "type": "number" }, { "type": "string" }]
            },
            "term": { "type": "string" }
          }
        }
      }
    },
    "insureds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "mailing_address": { "type": "string" }
        }
      }
    },
    "locations": {
      "type": "array",
      "description": "Homeowners: property locations; Auto: garaging address if shown",
      "items": {
        "type": "object",
        "properties": {
          "address": { "type": "string" }
        }
      }
    },
    "coverages": {
      "type": "array",
      "description": "Flattened list of coverage lines as printed on the doc",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "limit": {
            "anyOf": [{ "type": "number" }, { "type": "string" }]
          },
          "aggregate": {
            "anyOf": [{ "type": "number" }, { "type": "string" }]
          },
          "deductible": {
            "anyOf": [{ "type": "number" }, { "type": "string" }]
          },
          "premium": {
            "anyOf": [{ "type": "number" }, { "type": "string" }]
          },
          "notes": { "type": "string" }
        }
      }
    },
    "deductibles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "amount": {
            "anyOf": [{ "type": "number" }, { "type": "string" }]
          }
        }
      }
    },
    "homeowners": {
      "type": "object",
      "description": "Populate when document_kind = homeowners_declarations",
      "properties": {
        "dwelling_coverage_a": {
          "anyOf": [{ "type": "number" }, { "type": "string" }]
        },
        "other_structures_coverage_b": {
          "anyOf": [{ "type": "number" }, { "type": "string" }]
        },
        "personal_property_coverage_c": {
          "anyOf": [{ "type": "number" }, { "type": "string" }]
        },
        "loss_of_use_coverage_d": {
          "anyOf": [{ "type": "number" }, { "type": "string" }]
        },
        "liability_coverage_e": {
          "anyOf": [{ "type": "number" }, { "type": "string" }]
        },
        "medical_payments_coverage_f": {
          "anyOf": [{ "type": "number" }, { "type": "string" }]
        },
        "wind_or_hurricane_deductible": {
          "anyOf": [{ "type": "number" }, { "type": "string" }]
        },
        "endorsements": {
          "type": "array",
          "items": { "type": "string" }
        },
        "mortgagees": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "address": { "type": "string" }
            }
          }
        }
      }
    },
    "auto": {
      "type": "object",
      "description": "Populate when document_kind = auto_declarations",
      "properties": {
        "vehicles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "year": { "type": "string" },
              "make": { "type": "string" },
              "model": { "type": "string" },
              "vin": { "type": "string" },
              "garaging_address": { "type": "string" },
              "lienholders": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "drivers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "date_of_birth": { "type": "string" }
            }
          }
        }
      }
    },
    "certificate": {
      "type": "object",
      "description": "For ACORD COIs",
      "properties": {
        "certificate_holder": { "type": "string" },
        "policies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "line": { "type": "string" },
              "policy_number": { "type": "string" },
              "effective_date": { "type": "string" },
              "expiration_date": { "type": "string" },
              "limits_text": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
